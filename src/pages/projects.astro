---
import "#styles/post-content.css";

import SubpageLayout from "#layouts/SubpageLayout.astro";
import Highlights from "#components/projects/Highlights.astro";
import Work from "#content/projects/work.md";
import Misc from "#content/projects/misc.md";
---

<style>
  * {
    --content-width: 800px;
  }

  .section {
    padding-top: 3rem;
    max-width: var(--content-width);
    margin: 0 auto;
  }

  .section-header {
    padding-bottom: 0.5rem;

    & h2 {
      font-size: 1.5rem;
      font-weight: 600;
      font-family: var(--font-vollkorn);
      color: var(--accent-color);
      line-height: 1;
    }

    & p {
      font-size: 1rem;
      font-weight: 300;
      font-family: var(--flow-font);
    }
  }
</style>
<SubpageLayout
  title="Projects"
  description="A list of projects I've worked on."
>
  <Highlights />
  <section class="section">
    <hgroup class="section-header">
      <h2>Work</h2>
      <p>I've worked at</p>
    </hgroup>
    <div class="content">
      <Work />
    </div>
  </section>

  <section class="section">
    <hgroup class="section-header">
      <h2>Misc</h2>
      <p>Other stuff I couldn't fit into the above sections.</p>
    </hgroup>
    <div class="content">
      <Misc />
    </div>
  </section>
</SubpageLayout>
