---
import { PAGES_LIST, PAGES } from "../../structure";
---

<style>
  .footer {
    padding: 2rem 0;
    width: fit-content;
    margin: 0 auto;
  }

  .footer-wrapper {
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    gap: 0.5rem;
  }

  .footer-title {
    font-size: 2.5rem;
    line-height: 1;
    font-family: var(--font-vollkorn);
    font-weight: 600;
    font-style: italic;
    color: var(--accent-color);
    letter-spacing: -0.03em;

    & > a {
      color: var(--accent-color);
      text-decoration: none;
    }
  }

  .footer-nav {
    display: flex;
    flex-flow: row wrap;
    gap: 0.6rem;
    font-family: var(--flow-font);
    color: var(--text-color);
  }

  .footer-note {
    font-size: 0.8rem;
    font-family: var(--flow-font);
    font-weight: 300;
    color: var(--note-color);
    line-height: 1.5;
    text-wrap: balance;
  }

  :is(.footer-nav, .footer-note) a {
    color: var(--text-color);
    text-decoration-line: underline;
    text-decoration-thickness: 2px;
    text-decoration-color: var(--color-muted-teal);
    transition:
      color 0.3s ease,
      text-decoration-color 0.3s ease,
      background-color 0.3s ease;

    &:hover {
      text-decoration-color: var(--text-color);
      color: var(--background-color);
      background-color: var(--text-color);
    }
  }
</style>
<footer class="footer">
  <div class="footer-wrapper">
    <div class="footer-title">
      <a href={PAGES.HOME.href}>Izimani</a>
    </div>
    <nav class="footer-nav">
      {PAGES_LIST.map((page) => <a href={page.href}>{page.navTitle}</a>)}
    </nav>
    <p class="footer-note">
      Unless noted otherwise, all content was made by a human.
    </p>
    <p class="footer-note">
      You can find the source code for this site on <a
        href="https://github.com/izimani/izimanidotdev">GitHub</a
      >.
    </p>
    <p class="footer-note">
      <a href="/colophon">Colophon</a>
    </p>
  </div>
</footer>
