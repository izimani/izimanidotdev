---
import { PAGES_LIST } from "../../structure";
---

<nav class="nav">
  <style>
    * {
      --nav-item-color: var(--text-color);
    }

    .nav {
      padding: 0.5rem 0 1.5rem 0;

      display: flex;
      flex-flow: row wrap;
      gap: 0.6rem;

      & > a {
        font-size: 1rem;
        line-height: 1.5;
        font-family: var(--flow-font);
        font-weight: 400;
        color: var(--nav-item-color);
        text-decoration: none;
        transition: color 0.3s ease;

        &:hover {
          color: var(--accent-color);
        }
      }
    }
  </style>

  {PAGES_LIST.map((page) => <a href={page.href}>{page.navTitle}</a>)}
</nav>
