---
type NavigationItem = {
  title: string;
  href: string;
};

const navigation: NavigationItem[] = [
  {
    title: "home",
    href: "/",
  },
  {
    title: "shorts",
    href: "/shorts",
  },
  {
    title: "posts",
    href: "/posts",
  },
  {
    title: "story",
    href: "/story",
  },
  {
    title: "contact",
    href: "/contact",
  },
];
---

<nav class="nav">
  <style>
    :root {
      --nav-item-color: var(--text-color);
    }

    .nav {
      padding: 0.5rem 0 1.5rem 0;

      display: flex;
      flex-flow: row wrap;
      gap: 0.6rem;

      & > a {
        font-size: 1rem;
        line-height: 1.5;
        font-family: var(--flow-font);
        font-weight: 400;
        color: var(--nav-item-color);
        text-decoration: none;
        transition: color 0.3s ease;

        &:hover {
          color: var(--accent-color);
        }
      }
    }
  </style>

  {navigation.map((item) => <a href={item.href}>{item.title}</a>)}
</nav>
