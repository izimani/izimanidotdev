---
import DecorationBar from "./DecorationBar.astro";
import Nav from "./Nav.astro";

export enum HeaderVariant {
  Home = "home",
  Subpage = "subpage",
}

interface Props {
  variant: HeaderVariant;
  title: string;
  description: string;
}

const { variant, title, description } = Astro.props;
---

<style>
  :root {
    --bar-height: 10px;
    --main-title-color: var(--color-deep-emerald);
    --sub-title-color: light-dark(
      var(--color-charcoal),
      var(--color-paper-beige)
    );
  }

  .title {
    width: 100%;
    padding: 3rem 0 1rem 0;
    display: flex;
    flex-flow: column nowrap;
    align-items: baseline;

    & .main {
      font-size: 4.5rem;
      line-height: 1;
      font-family: var(--font-vollkorn);
      font-weight: 600;
      font-style: italic;
      color: var(--main-title-color);
      letter-spacing: -0.03em;

      & > a {
        color: var(--main-title-color);
        text-decoration: none;
      }
    }

    & .sub {
      font-size: 1rem;
      line-height: 1.5;
      font-family: var(--font-ibm-plex-serif);
      font-weight: 300;
      color: var(--sub-title-color);
    }

    &.title__subpage {
      & .main {
        font-size: 2.5rem;
      }
    }
  }
</style>

<header>
  <hgroup
    class:list={[
      "title",
      variant === HeaderVariant.Subpage && "title__subpage",
    ]}
  >
    <h1 class="main">
      <a href="/">Izimani</a>{
        title && <span style="color: var(--sub-title-color);"> | {title}</span>
      }
    </h1>
    <p class="sub">{description}</p>
  </hgroup>
  <DecorationBar />
  <Nav />
</header>
