---
import DecorationBar from "./DecorationBar.astro";
import Nav from "./Nav.astro";
import ColorSchemeSwitch from "./ColorSchemeSwitch.astro";

export enum HeaderVariant {
  Home = "home",
  Subpage = "subpage",
}

interface Props {
  variant: HeaderVariant;
  title: string;
  description: string;
}

const { variant, title, description } = Astro.props;
---

<style>
  :root {
    --bar-height: 10px;
    --main-title-color: var(--accent-color);
    --sub-title-color: var(--text-color);
  }

  .title {
    width: 100%;
    padding: 3rem 0 1rem 0;
    display: flex;
    flex-flow: column nowrap;
    align-items: baseline;

    & .main {
      font-size: 4.5rem;
      line-height: 1;
      font-family: var(--font-vollkorn);
      font-weight: 600;
      font-style: italic;
      color: var(--main-title-color);
      letter-spacing: -0.03em;

      & > a {
        color: var(--main-title-color);
        text-decoration: none;
      }
    }

    & .sub {
      font-size: 1rem;
      line-height: 1.5;
      font-family: var(--font-ibm-plex-serif);
      font-weight: 300;
      color: var(--sub-title-color);
    }

    &.title__subpage {
      & .main {
        font-size: 2.5rem;
      }
    }
  }

  .title-wrapper {
    display: flex;
    flex-flow: row nowrap;
    align-items: start;
    gap: 0.2rem;

    @media (max-width: 768px) {
      padding-bottom: 1rem;
      flex-flow: column nowrap;
    }
  }

  .color-scheme-switch-wrapper {
    align-self: center;
  }
</style>

<header>
  <div class="title-wrapper">
    <hgroup
      class:list={[
        "title",
        variant === HeaderVariant.Subpage && "title__subpage",
      ]}
    >
      <h1 class="main">
        <a href="/">Izimani</a>{
          title && (
            <span style="color: var(--sub-title-color);"> | {title}</span>
          )
        }
      </h1>
      <p class="sub">{description}</p>
    </hgroup>
    <div class="color-scheme-switch-wrapper">
      <ColorSchemeSwitch />
    </div>
  </div>
  <DecorationBar />
  <Nav />
</header>
