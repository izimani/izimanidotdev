---
import { Picture } from "astro:assets";
import Assets from "../../util/assets";
import Figure from "./Figure.astro";

interface Props {
  src: string;
  alt: string;
  caption?: string;
}

const { src, alt, caption } = Astro.props;
---

<style>
  .image {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
</style>
<Figure caption={caption || alt}>
  <Picture class="image" src={Assets.getImage(src)} alt={alt} />
</Figure>
