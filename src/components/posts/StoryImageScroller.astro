---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<style>
  .image-scroll-box {
    /* Reset the margin from the rest of the page */
    margin: 0 -5rem;

    @media (max-width: 768px) {
      margin: 0 -20px;
    }

    position: relative;
  }

  .image-scroll-box .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 10;
    mix-blend-mode: difference;
  }

  .image-scroll-box .image-overlay h2 {
    font-family: var(--font-vollkorn);
    font-size: 2rem;
    font-weight: 600;
    color: white;
    position: sticky;
    top: 10px;
    padding: 10px;
    margin: 0;
  }
</style>
<div class="image-scroll-box">
  <slot />
  <div class="image-overlay">
    <h2>
      {title}
    </h2>
  </div>
</div>
